if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 0.9em  //²à±ßÀ¸×ÖÌå´óÐ¡
  font-weight: bold //²à±ßÀ¸×ÖÌå´ÖÏ¸
  font-family: Tahoma,Verdana,"Microsoft YaHei", "Times New Roman","Georgia", serif
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal
  .text
    text-overflow: ellipsis
    display: block
    overflow: hidden
    white-space: nowrap

.widget-icon
  font-family: font-icon

.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"

.tagcloud
  a
    margin-right: 5px
    display: inline-block
